<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"
        android:state_enabled="true">
        <layer-list >
            <item>
                <shape>
                    <solid android:color="@color/gray_400"/>
                    <padding android:left="2dp"
                        android:right="2dp"
                        android:top="2dp"
                        android:bottom="2dp"/>
                    <stroke android:width="2dp"
                        android:color="@color/black"/>
                </shape>

            </item>
            <item>
                <shape>
                    <solid android:color="@color/transparent_yellow"/>
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_pressed="true"
        android:state_enabled="true">
        <layer-list >
            <item>
                <shape>
                    <solid android:color="@color/gray_600"/>
                    <padding android:left="2dp"
                        android:right="2dp"
                        android:top="2dp"
                        android:bottom="2dp"/>
                    <stroke android:width="2dp"
                        android:color="@color/black"/>
                </shape>

            </item>
            <item>
                <shape>
                    <solid android:color="@color/transparent_yellow"/>
                </shape>

            </item>

        </layer-list>
    </item>

    <item android:state_enabled="false"
        android:state_pressed="false">
        <layer-list >
            <item >
                <shape>
                    <solid android:color="@color/inactive_grey_400" />
                    <padding android:left="2dp"
                        android:right="2dp"
                        android:top="2dp"
                        android:bottom="2dp"/>
                    <stroke android:width="2dp"
                        android:color="@color/inactive_black"/>

                </shape>

            </item>
            <item>
                <shape>
                    <solid android:color="@color/inactive_yellow"/>
                </shape>

            </item>

        </layer-list>
    </item>

    <item android:state_enabled="false"
        android:state_pressed="true">
        <layer-list >
            <item>
                <shape >
                    <solid android:color="@color/gray_400" />
                    <padding android:left="2dp"
                        android:right="2dp"
                        android:top="2dp"
                        android:bottom="2dp"/>
                    <stroke android:width="2dp"
                        android:color="@color/black"/>

                </shape>

            </item>

        </layer-list>
    </item>
</selector>